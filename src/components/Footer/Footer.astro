---
import { Icon } from "astro-icon/components";
import { getEntry } from "astro:content";

const details = await getEntry("common", "data");
---

<footer class="flex flex-col gap-5">
  <p class="flex flex-row gap-10 text-sm">
    {
      details.data.links.map((link) => (
        <a href={link.href} target="_blank">
          <Icon name={`fa6-brands:${link.name}`} class="text-xl" />
        </a>
      ))
    }
  </p>
  <p>
    Copyright Â© {new Date().getFullYear()} - {details.data.fullName}
  </p>
  <!-- smol comment to say website is still a work in progress, remove once done -->
  <p class="text-xs">This website is still a work in progress.</p>
</footer>
